<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Awhar</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Awhar</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Location Permissions for Google Maps -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Awhar needs your location to show nearby drivers and provide ride services</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>Awhar needs your location to track rides and provide navigation even when the app is in background</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Awhar needs your location to provide the best ride experience and real-time tracking</string>
	
	<!-- Speech Recognition & Microphone -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>Awhar uses speech recognition for voice search in Arabic, French, and English</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>Awhar needs microphone access for voice search and audio messages</string>
	
	<!-- Camera & Photo Library Permissions -->
	<key>NSCameraUsageDescription</key>
	<string>Awhar needs camera access to take photos for chat messages</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Awhar needs photo library access to share images in chat</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Awhar needs permission to save photos to your library</string>
	
	<!-- Deep Linking: Custom URL Scheme -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.awhar.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>awhar</string>
			</array>
		</dict>
	</array>
	
	<!-- Deep Linking: Universal Links (iOS) -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:api.awhar.com</string>
		<string>applinks:www.api.awhar.com</string>
	</array>
	
	<!-- Deep Linking: Enable App Transport Security for local dev -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<key>NSAllowsArbitraryLoadsInWebContent</key>
		<true/>
	</dict>
</dict>
</plist>
